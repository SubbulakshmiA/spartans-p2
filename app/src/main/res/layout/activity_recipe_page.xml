<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".RecipePage">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_margin="@dimen/margin_card_Large"
        app:cardBackgroundColor="@color/card_view"
        app:cardCornerRadius="@dimen/card_corner_radius">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/drawable_star_size"
                android:layout_height="@dimen/drawable_star_size"
                android:layout_gravity="end"
                android:src="@drawable/ic_star"/>

            <TextView
                android:id="@+id/title"
                android:layout_width="323dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_card_Large"
                android:background="@color/app_background_color"
                android:text="Recipe Title"
                android:textAlignment="center"
                android:textColor="@color/text_color_primary"
                android:textSize="@dimen/text_large" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_card_Large"
                    android:layout_marginBottom="@dimen/margin_card_Large"
                    android:background="@color/app_background_color"
                    android:text="Yield:"
                    android:textAlignment="textStart"
                    android:textColor="@color/text_color_secondary"
                    android:textSize="@dimen/text_medium" />

                <TextView
                    android:id="@+id/r_yield"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_card_Large"
                    android:layout_marginBottom="@dimen/margin_card_Large"
                    android:background="@color/app_background_color"
                    android:text="# of servings"
                    android:textAlignment="textStart"
                    android:textColor="@color/text_color_primary"
                    android:textSize="@dimen/text_medium" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_card_Large"
                    android:layout_marginBottom="@dimen/margin_card_Large"
                    android:background="@color/app_background_color"
                    android:text="Prep time:"
                    android:textAlignment="textStart"
                    android:textColor="@color/text_color_secondary"
                    android:textSize="@dimen/text_medium" />

                <TextView
                    android:id="@+id/prep_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_card_Large"
                    android:layout_marginBottom="@dimen/margin_card_Large"
                    android:background="@color/app_background_color"
                    android:text="# mins"
                    android:textAlignment="textStart"
                    android:textColor="@color/text_color_primary"
                    android:textSize="@dimen/text_medium" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_card_Large"
                    android:layout_marginBottom="@dimen/margin_card_Large"
                    android:background="@color/app_background_color"
                    android:text="Total time:"
                    android:textAlignment="textStart"
                    android:textColor="@color/text_color_secondary"
                    android:textSize="@dimen/text_medium" />

                <TextView
                    android:id="@+id/total_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_card_Large"
                    android:layout_marginBottom="@dimen/margin_card_Large"
                    android:background="@color/app_background_color"
                    android:text="# mins"
                    android:textAlignment="textStart"
                    android:textColor="@color/text_color_primary"
                    android:textSize="@dimen/text_medium" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_card_Large"
                android:background="@color/app_background_color"
                android:text="Ingredients:"
                android:textAlignment="textStart"
                android:textColor="@color/text_color_secondary"
                android:textSize="@dimen/text_medium" />

            <TextView
                android:id="@+id/ingredients"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_card_Large"
                android:background="@color/app_background_color"
                android:text="1 ingredient "
                android:textAlignment="textStart"
                android:textColor="@color/text_color_primary"
                android:textSize="@dimen/text_medium" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_card_Large"
                android:layout_marginTop="@dimen/margin_card_Large"
                android:background="@color/app_background_color"
                android:text="Directions:"
                android:textAlignment="textStart"
                android:textColor="@color/text_color_secondary"
                android:textSize="@dimen/text_medium" />

            <TextView
                android:id="@+id/directions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_card_Large"
                android:layout_marginBottom="@dimen/margin_card_Large"
                android:background="@color/app_background_color"
                android:text="Step 1: cook ingredient 1"
                android:textAlignment="textStart"
                android:textColor="@color/text_color_primary"
                android:textSize="@dimen/text_medium" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/layout_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:backgroundTint="@color/btn_reset"
            android:text="back"
            android:textAlignment="center"
            android:textColor="@color/white" />

        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/btn_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:text="home" />
    </LinearLayout>
</LinearLayout>